{
    "name": "kodus/mail",
    "description": "Simple, modern library of services for sending UTF-8 e-mail",
    "authors": [
        {
            "name": "Rasmus Schultz",
            "email": "rasc@jfmedier.dk",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">= 8.0",
        "psr/log": "^1"
    },
    "require-dev": {
        "codeception/codeception": "^5",
        "codeception/module-asserts": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Kodus\\Mail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kodus\\Mail\\Test\\": "tests/",
            "Kodus\\Mail\\Test\\Unit\\": "tests/unit/",
            "Kodus\\Mail\\Test\\Integration\\": "tests/integration/"
        }
    }
}
